{
	"id": "com.sony.bravia.smarttv",
	"name": {
		"en": "Sony Bravia SmartTV app"
	},
	"description": {
		"en": "Adds support for your Sony Bravia Smart TV"
	},
	"category": "video",
	"version": "1.0.0",
	"compatibility": "1.x",
	"author": {
		"name": "Sander Maas",
		"email": "sandermaas@gmail.com"
	},
	"images": {
		"large": "assets/images/SBATVL.jpg",
		"small": "assets/images/SBATVS.jpg"
	},
	"permissions": [
		"homey:manager:speech-input",
		"homey:manager:speech-output"
	],
	"drivers": [{
		"id": "tv",
		"name": {
			"en": "Sony Bravia TV"
		},
		"images": {
			"large": "drivers/tv/assets/images/SBATVL.jpg",
			"small": "drivers/tv/assets/images/SBATVS.jpg"
		},
		"class": "tv",
		"capabilities": [
			"onoff", "volume_set"
		],
		"mobile": {
			"components": [{
				"id": "icon",
				"capabilities": ["onoff"]
			}]
		},
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_my_devices"
                    }
                },
                {
                    "id": "add_my_devices",
                    "template": "add_devices"
                }
            ],
		"settings": [{
			"type": "group",
			"label": {
				"en": "General settings",
				"nl": "Algemene instellingen"
			},
			"children": [{
				"id": "ip",
				"type": "text",
				"label": {
					"en": "IP address",
					"nl": "IP adres"
				},
				"value": "0.0.0.0"
			}, {
				"id": "polling",
				"type": "text",
				"label": {
					"en": "Device polling minutes",
					"nl": "Apparaat pollen minuten"
				},
				"value": "1"
			}]
		}]
	}],
	"flow": {
	"actions": [
            {
                "id": "Netflix",
                "title": {
                    "en": "Netflix",
                    "nl": "Netflix"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "placeholder": {
                            "en": "Select television",
                            "nl": "Selecteer television"
                        },
                        "filter": "driver_id=tv"
                    }
                ]
            },
            {
                "id": "SetInput",
                "title": {
                    "en": "Select input",
                    "nl": "Selecteer input"
                },
                "args": [
                    {
                        "name": "input",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "input",
                            "nl": "input"
                        }
                    },
                    {
                        "name": "device",
