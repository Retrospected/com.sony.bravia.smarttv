{
  "id": "com.sony.bravia.smarttv",
  "name": {
    "en": "Sony Bravia SmartTV app"
  },
  "description": {
    "en": "Adds support for your Sony Bravia Smart TV"
  },
  "category": "video",
  "version": "2.0.4",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "author": {
    "name": "Sander Maas",
    "email": "sandermaas@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Sander Maas",
        "email": "sandermaas@gmail.com"
      }
    ]
  },
  "images": {
    "large": "assets/images/SBATVL.jpg",
    "small": "assets/images/SBATVS.jpg"
  },
  "permissions": [
    "homey:manager:speech-input",
    "homey:manager:speech-output"
  ],
  "capabilities": {
    "oldstate": {
      "type": "boolean",
      "title": {
        "en": "Keeping track of the old state of the TV"
      },
      "getable": true,
      "setable": true
    }
  },
  "drivers": [
    {
      "id": "tv",
      "name": {
        "en": "Sony Bravia TV"
      },
      "images": {
        "large": "drivers/tv/assets/images/SBATVL.jpg",
        "small": "drivers/tv/assets/images/SBATVS.jpg"
      },
      "class": "tv",
      "capabilities": [
        "volume_up",
        "volume_down",
        "volume_mute",
        "channel_up",
        "channel_down"
      ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "settings": []
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "turned_on",
        "title": {
          "en": "TV is turned on",
          "nl": "TV is aangezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=tv"
          }
        ]
      },
      {
        "id": "turned_off",
        "title": {
          "en": "TV is turned off",
          "nl": "TV is uitgezet"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=tv"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "tv_status",
        "title": {
          "en": "TV !{{is|is not}} turned on",
          "nl": "TV !{{is|is niet}} aan"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=tv"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "Netflix",
        "title": {
          "en": "Netflix",
          "nl": "Netflix"
        },
        "args": [
          {
            "name": "device",
